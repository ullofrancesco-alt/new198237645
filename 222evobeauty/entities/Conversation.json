{
  "name": "Conversation",
  "type": "object",
  "properties": {
    "user_message": {
      "type": "string",
      "description": "Message from the user"
    },
    "ai_response": {
      "type": "string",
      "description": "AI generated response"
    },
    "language": {
      "type": "string",
      "description": "Language code (it, en, es, etc.)"
    },
    "relevance_score": {
      "type": "number",
      "description": "Relevance for humanoid development (0-100)",
      "minimum": 0,
      "maximum": 100
    },
    "practical_value": {
      "type": "number",
      "description": "Actionability score (0-100)",
      "minimum": 0,
      "maximum": 100
    },
    "category": {
      "type": "string",
      "enum": [
        "diy_beginner",
        "component_suppliers",
        "cost_breakdown",
        "lidar_sensors",
        "servo_motors",
        "ai_software",
        "emotional_ai",
        "sexual_desirability",
        "tesla_optimus",
        "unitree_robots",
        "realbotix",
        "meta_ai",
        "raspberry_pi_projects",
        "3d_printing",
        "power_systems",
        "learning_algorithms",
        "diy_assembly",
        "budget_builds",
        "industry_news",
        "breakthrough_tech",
        "other"
      ],
      "description": "Conversation category"
    },
    "difficulty_level": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced", "expert", "industry"],
      "description": "Technical difficulty level"
    },
    "key_insights": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Key actionable insights"
    },
    "is_highlighted": {
      "type": "boolean",
      "default": false,
      "description": "Featured as daily highlight"
    },
    "media_url": {
      "type": "string",
      "description": "Optional attachment (image, PDF, etc.)"
    }
  },
  "required": ["user_message", "ai_response", "language"]
}
